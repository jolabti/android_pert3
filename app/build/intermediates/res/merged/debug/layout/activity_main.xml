<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.alter.appmyweight.MainActivity">

    <android.support.v7.widget.AppCompatTextView
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_dark_background"
        android:layout_width="wrap_content"
        android:text="Hi user"
        android:textSize="12pt"
        ></android.support.v7.widget.AppCompatTextView>



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        app:hintAnimationEnabled="true"
        android:id="@+id/inputBerat">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:padding="20dp"
            android:hint="Berat Anda"
            android:id="@+id/edtBerat" />
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="200dp"
        android:background="@color/colorPrimaryDark"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:id="@+id/fabme"
            android:layout_marginTop="100dp"
            app:rippleColor="#1edaaa"
            app:backgroundTint="#ccc"
            app:theme="@style/Base.AlertDialog.AppCompat"
            app:useCompatPadding="true"
            android:src="@mipmap/ic_launcher"
            />
     </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Process"
        android:id="@+id/prsButton"
        android:layout_below="@+id/inputBerat"
        android:layout_alignParentStart="true" />

</RelativeLayout>
